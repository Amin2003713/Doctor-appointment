<MudAppBar Elevation="4" Color="Color.Default">
    <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start"
                   OnClick="@_ToggleDrawer"/>

    <MudText Typo="Typo.h6" Class="ml-2">مدیریت نوبت‌ها</MudText>

    <MudSpacer/>

    <MudIconButton Icon="@Icons.Material.Filled.Login" Href="/register" Color="Color.Inherit"/>
</MudAppBar>


@code
{

    [Parameter] public required EventCallback ToggleDrawer { get; set; }


    private async Task _ToggleDrawer()
    {
        await ToggleDrawer.InvokeAsync();
    }

    private void Logout()
    {
        // TODO: پیاده‌سازی خروج
        NavManager.NavigateTo("/logout");
    }
}
