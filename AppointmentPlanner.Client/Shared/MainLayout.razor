@using AppointmentPlanner.Client.Pages
@inherits LayoutComponentBase

@* Required *@
<MudThemeProvider/>
<MudPopoverProvider/>

@* Needed for dialogs *@
<MudDialogProvider/>

@* Needed for snackbars *@
<MudSnackbarProvider/>

<MudLayout>
    <MudRTLProvider RightToLeft="true">
        <!-- نوار بالا -->
        <AppBar ToggleDrawer="ToggleDrawer"/>

        <!-- منوی کناری -->
        <Drawer DrawerOpen="_drawerOpen"/>


        <!-- محتوای اصلی -->
        <MudMainContent Class="page">
            @Body
        </MudMainContent>
    </MudRTLProvider>

</MudLayout>

@code{
    [Inject] protected AppointmentService Service { get; set; }
    [Inject] protected IJSRuntime JsRuntime { get; set; }

    private bool _drawerOpen = false;


    private void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
        StateHasChanged();
    }


}