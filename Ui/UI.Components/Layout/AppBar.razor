@using UI.Components.Common.BaseComponents.Picture
@using Microsoft.AspNetCore.Components.Web
@using UI.Components.Common.BaseComponents.Dialogs
@inject IDialogService DialogService

<MudAppBar Elevation="3"
           Fixed
           Gutters>

    <!-- Left cluster -->
    <MudIconButton Icon="@Icons.Filled.Menu"
                   Color="Color.Default"
                   OnClick="@(e => DrawerToggle.InvokeAsync())"/>

    <MudText Typo="Typo.h1" Class=" font-bold">مطب من</MudText>

    <MudSpacer/>

    <MudBadge Dot="true" Color="Color.Error" Overlap="true">
        <MudIconButton Icon="@Icons.Filled.Notifications"
                       Color="Color.Default"/>
    </MudBadge>

    <!-- Notifications -->
    <MudIconButton Edge="Edge.Start" OnClick="@Logout" Icon="@Icons.Filled.Logout">
        خروج
    </MudIconButton>


</MudAppBar>

@code {
    [Parameter] public EventCallback DrawerToggle { get; set; }

    private void GoToProfile()
        => NavigationManager.NavigateTo("/profile");

    private void GoToSettings()
        => NavigationManager.NavigateTo("/settings");

    private async Task Logout()
        => await StateProvider.Logout();
}
